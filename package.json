{
  "name": "blinkr",
  "version": "1.0.0-beta",
  "description": "Blinkr is a next-generation web browser built for speed, simplicity, and full user control.",
  "main": "assets/scripts/entry.js",
  "scripts": {
    "start": "electronmon .",
    "build": "electron-builder --win --x64",
  "build:release": "npm run build",
  "build:test": "electron-builder --dir"
  },
  "build": {
    "appId": "com.pfmcodes.blinkr",
    "productName": "Blinkr",
    "files": [
      "assets/**/*",
      "node_modules/**/*",
      "package.json",
      "src/**/*",
      "LICENSE"
    ],
    "directories": {
      "buildResources": "assets"
    },
    "win": {
      "target": "nsis",
      "icon": "assets/images/logo.ico"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowToChangeInstallationDirectory": true
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/images/logo.png"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/PFMCODES/Blinkr.git"
  },
  "keywords": [],
  "author": "PFMCODES",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/PFMCODES/Blinkr/issues"
  },
  "homepage": "https://github.com/PFMCODES/Blinkr#readme",
  "dependencies": {
    "axios": "^1.9.0",
    "cheerio": "^1.1.0",
    "electronmon": "^2.0.3",
    "firebase": "^11.9.1",
    "https": "^1.0.0",
    "os": "^0.1.2",
    "path": "^0.12.7"
  },
  "devDependencies": {
    "electron": "^36.4.0",
    "electron-builder": "^26.0.12"
  }
}
